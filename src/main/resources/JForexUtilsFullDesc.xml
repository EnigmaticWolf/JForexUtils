<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>full</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>JForexUtils-${project.version}</baseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>
			<excludes>
                <exclude>com.jforex.programming:JForexUtils</exclude>
            </excludes>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>**/JForexPlatformSettings.xml</include>
				<include>**/log4j2.xml</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>target/${project.artifactId}-${project.version}.jar</source>
			<outputDirectory>/</outputDirectory>
			<destName>${project.artifactId}-${project.version}.jar</destName>
		</file>
	</files>
</assembly>